<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".presentation.MainActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white"
        tools:context=".presentation.MainActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/title_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Title"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/heart" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/share" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/bag" />
            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager2"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="400dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar"/>

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                app:dotsColor="@color/skinColor"
                android:id="@+id/indecator"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:selectedDotColor="@color/brown"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:progressMode="false"
                app:dotsSpacing="3dp"
                app:dotsWidthFactor="1"
                app:dotsSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/viewpager2"/>

            <LinearLayout
                android:id="@+id/breaf_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/indecator">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="product name"/>
                    <TextView
                        android:id="@+id/brand_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginBottom="6dp"
                        android:textFontWeight="200"
                        android:text="Brand name"/>
                    <TextView
                        android:id="@+id/sku_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginBottom="6dp"
                        android:textSize="10sp"
                        android:textFontWeight="200"
                        android:text="SKU : "/>
                </LinearLayout>
                <TextView
                    android:id="@+id/price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="3.5 KWD"/>
            </LinearLayout>
            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/breaf_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="18dp"
                android:paddingHorizontal="12dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color :"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp"
                    android:textSize="18sp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/colorRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/color_image_view"
                    android:layout_marginBottom="28dp"
                    android:orientation="horizontal"/>

                <LinearLayout
                    android:paddingVertical="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@drawable/border_black"
                    android:layout_marginBottom="28dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textFontWeight="600"
                            android:text="@string/or_4_intrest_free_payments"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="@string/_0_88_kdw"
                                android:textFontWeight="1000"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textFontWeight="600"
                                android:textColor="@color/black"
                                android:text="@string/underlined_text"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:src="@drawable/logo"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/black"
                        android:text="Quantity"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/decreaseQuantity"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginEnd="12dp"
                            android:background="@color/gray"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/remove"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="70dp"
                            android:background="@drawable/border_black"
                            android:layout_marginEnd="12dp"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/quantity_txt"
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:text="1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/increasQuantity"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/black"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/baseline_add_24"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/expand_btn"
                        android:layout_width="match_parent"
                        android:layout_marginTop="28dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:textColor="@color/black"
                            android:text="PRODUCT INFORMATION"
                            android:textSize="20sp"/>
                        <ImageView
                            android:id="@+id/drop_down_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/back"
                            app:tint="@color/black"
                            android:rotation="-90"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/information_txt"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/information"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="18dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:background="@drawable/normal_border_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center">
            <TextView
                android:text="Add to bag"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingVertical="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/normal_border_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:text="Share"
                android:textStyle="bold"
                android:paddingVertical="8dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progresbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</LinearLayout>